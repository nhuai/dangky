<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_log"
        android:paddingLeft="65dp">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imagelogin"
        android:layout_gravity="center"
        android:src="@drawable/chibi16" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/txtviewlogin"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:text="Đăng nhập"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtxtuserlogin"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/txtviewlogin"
        android:hint="Username" />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtxtpasslogin"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/edtxtuserlogin"
        android:hint="Password"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btsubmitlogin"
        android:layout_gravity="center"
        android:layout_below="@id/edtxtpasslogin"
        android:text="Đăng nhập"
        />
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Hủy bỏ"
        android:id="@+id/cancellog"
        />
    </LinearLayout>
</RelativeLayout>